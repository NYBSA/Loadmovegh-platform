# LoadMoveGH API â€” Environment Variables
APP_NAME=LoadMoveGH
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/loadmovegh

# JWT
JWT_SECRET_KEY=CHANGE_ME_super_secret_key_64_chars
JWT_REFRESH_SECRET_KEY=CHANGE_ME_another_secret_key_64_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email / SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@loadmovegh.com
EMAIL_FROM_NAME=LoadMoveGH

# OTP
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6

# MTN MoMo API (Ghana)
MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MOMO_COLLECTION_API_KEY=
MOMO_COLLECTION_API_USER=
MOMO_COLLECTION_SUBSCRIPTION_KEY=
MOMO_DISBURSEMENT_API_KEY=
MOMO_DISBURSEMENT_API_USER=
MOMO_DISBURSEMENT_SUBSCRIPTION_KEY=
MOMO_CALLBACK_HOST=https://api.loadmovegh.com
MOMO_ENVIRONMENT=sandbox

# Platform Fees
PLATFORM_COMMISSION_RATE=0.05
WITHDRAWAL_FEE_RATE=0.01
WITHDRAWAL_FEE_MIN=0.50
WITHDRAWAL_FEE_MAX=10.00
MIN_DEPOSIT_AMOUNT=1.00
MIN_WITHDRAWAL_AMOUNT=5.00
MAX_TRANSACTION_AMOUNT=50000.00

# Fraud Detection
FRAUD_ALERT_THRESHOLD_MEDIUM=40.0
FRAUD_ALERT_THRESHOLD_HIGH=65.0
FRAUD_ALERT_THRESHOLD_CRITICAL=85.0
FRAUD_AUTO_SCAN_ON_TRANSACTION=true
FRAUD_MAX_SIGNALS_PER_SCAN=50

# AI Load Matching
MATCHING_MAX_RADIUS_KM=300
MATCHING_MIN_COMPOSITE_SCORE=30.0
MATCHING_DEFAULT_TOP_K=10
MATCHING_ML_MODEL_PATH=

# AI Assistant (OpenAI)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.4
OPENAI_MAX_SESSIONS_PER_USER=50
OPENAI_MAX_MESSAGES_PER_SESSION=100

# Frontend
FRONTEND_URL=https://www.loadmovegh.com

# Admin
ADMIN_URL=https://admin.loadmovegh.com

# CORS (include localhost for local development)
CORS_ORIGINS=["https://www.loadmovegh.com","https://loadmovegh.com","https://admin.loadmovegh.com","http://localhost:3000","http://localhost:3001"]
